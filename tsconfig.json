{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "outDir": "./dist",
        "typeRoots": ["./node_modules/@types"],
    },
    "include": [
        "src",
        "test",
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "types": ["node", "jest", "@testing-library/jest-dom", "hermione" ],
}